<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/card_new"
    android:layout_height="560dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp"
            android:layout_alignParentTop="true"
            android:id="@+id/top">
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:layout_marginLeft="8dp"
                android:src="@drawable/news"
                android:id="@+id/card_news_imgs_personareporta"
                app:civ_border_color="#FF000000"
                app:civ_border_width="2dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Persona que reporta"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:textSize="16dp"
                android:gravity="center"
                android:id="@+id/txtPersonaReporta"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mid"
            android:orientation="horizontal"
            android:layout_below="@id/top"
            android:layout_above="@id/bot">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/news"
                android:id="@+id/card_news_imgs"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="80dp"
            android:id="@+id/bot"
            android:layout_alignParentBottom="true">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="2dp"
                android:text="wqwqwqwewqdsad"
                android:textSize="17sp"
                android:id="@+id/card_news_descripcion"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <!--ImageButton
                    android:layout_width="55dp"
                    android:src="@drawable/ic_like"
                    android:background="#FFFFFF"
                    android:layout_height="40dp"/>
                <ImageButton
                    android:layout_width="55dp"
                    android:layout_marginLeft="8dp"
                    android:background="#FFFFFF"
                    android:src="@drawable/ic_dislike"
                    android:layout_height="40dp"/>
                <ImageButton
                    android:layout_width="55dp"
                    android:layout_marginLeft="8dp"
                    android:background="#FFFFFF"
                    android:src="@drawable/ic_share"
                    android:layout_height="40dp"/-->

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#A8A8A8"
                android:layout_alignParentBottom="true"/>
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>